@model IEnumerable<Trilho>
@{
    ViewData["Title"] = "Index";
}

@{
    Layout = "_LayoutTrilhoCRUDIndex";
}

<br />
<br />
<br />

<div style="width:90em;">
    <div class="row">
        <div class="col-md-10 col-md-offset-1">

            <div class="panel panel-default panel-table">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col col-xs-6">
                            <h3 class="panel-title" style="text-align:justify">Registo <strong>Trilhos</strong></h3>
                        </div>
                        <div class="col col-xs-6 text-right">
                            <a asp-action="Criar" class="btn btn-sm btn-primary btn-create">Criar <strong>Trilho</strong></a>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <table class="table table-striped table-bordered ">
                        <thead>
                            <tr>
                                <!-- icon -->
                                <th><em class="glyphicon glyphicon-cog "></em></th>
                                <th>Nome</th>
                                <th>Inicio</th>
                                <th>Fim</th>
                                <th>Distancia</th>
                                <th>Dificuldade</th>
                                <th>Foto</th>
                                <th>Desativado</th>
                                @*<th align="center">Sumario</th>*@
                                @*<th align="center">Detalhes</th>*@
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Trilho T in Model)
                            {
                                // Se registo Trilho estiver desativado "marca" linha da tabela a vermelho
                                if (T.Desativado)
                                {
                                    <tr class="danger">
                                        @Html.Partial("TrilhoCRUDIndex", T)
                                    </tr>
                                }
                                else
                                {
                                    <tr>
                                        @Html.Partial("TrilhoCRUDIndex", T)
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Botões Paginação -->
