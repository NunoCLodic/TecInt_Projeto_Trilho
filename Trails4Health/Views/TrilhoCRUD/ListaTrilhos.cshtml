@model ViewModelListaTrilhos
@{
    ViewData["Title"] = "Lista Trilhos";
}

@{
    Layout = "_LayoutListaTrilhos";
}


@foreach (Trilho T in Model.ListaTrilhos)
{

<div style="margin-top:2em">
    <div class="col-lg-4" style="margin-top:3em; padding-left:4em">
        <div class="col-lg-12">

           @if (T.Foto != null)
            {
                var base64 = Convert.ToBase64String(T.Foto);
                var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                <img class="card-img img-fluid w-100" src="@imgSrc" style="width:21em; height:16em;" alt="">
            }
            else
            {
                <img class="card-img img-fluid w-100" src="~/images/imageNA.png" style="width:21em; height:16em;" alt="">
            }

            @*@{
            var base64 = Convert.ToBase64String(T.ImagemTrilho);
            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
            }
            <img class="img-fluid mb-4 mb-lg-0" src="@imgSrc" alt="" style="width:21em; height:16em">*@

        </div>
        <div>
           @if (T.Desativado)
            {
            <div class="col-lg-12" style="margin-top:1em">
                <a asp-action="Editar" asp-route-id="@T.TrilhoID" class="btn btn btn-danger"> DESATIVADO |  <strong>EDITAR</strong></a>
            </div>
            }
        </div>
    </div>
    <div class="col-lg-2" style="margin-top:2em">
        <dl class="panel-heading">
            <dt>
                Nome
            </dt>
            <dd style="margin-bottom:1em">
                @T.Nome
            </dd>
            <dt>
                Inicio
            </dt>
            <dd style="margin-bottom:1em">
                @T.Inicio
            </dd>
            <dt>
                Fim
            </dt>
            <dd style="margin-bottom:1em">
                @T.Fim
            </dd>

            <dt>
                Distancia
            </dt>
            <dd style="margin-bottom:1em">
                @T.Distancia <span>Km</span>
            </dd>

        </dl>
    </div>
</div>
}
<hr />
<!--Paginação-->
<div page-model="@Model.InfoPaginacao"
        css-classes-enabled="true"
        css-class-page="btn btn-sm"
        css-class-page-normal="btn-default"
        css-class-page-selected="btn-primary"
        class="col-lg-12" style="margin-top:2em; margin-left:4em; margin-bottom:2em">
</div>
