@model Trilho

@{
    ViewData["Title"] = "Detalhes Trilho";
}

<!-- Informação Introdutória -->
<div class="tagline-upper text-center text-heading text-shadow text-white mt-5 d-none d-lg-block">Trails4Health</div>
<div class="tagline-lower text-center text-expanded text-shadow text-uppercase text-white mb-5 d-none d-lg-block">Rua Comercio | 6300 Guarda</div>
<!-- Nav Bar - Navigation -->
<nav class="navbar navbar-expand-lg navbar-light bg-faded py-lg-4">
    <div class="container">
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav mx-auto">
                <li class="nav-item px-lg-4">
                    <a asp-controller="Home" asp-action="Index" class="nav-link text-uppercase text-expanded"> Home
                        <span class="sr-only">(current)</span>
                    </a>
                </li>
                <li class="nav-item px-lg-4">
                    <a asp-controller="Trilhos" asp-action="Index" class="nav-link text-uppercase text-expanded">Trilhos</a>
                </li>
                <li class="nav-item active px-lg-4">
                    <a asp-controller="Trilhos" asp-action="DetalhesTrilho" class="nav-link text-uppercase text-expanded">Detalhes Trilho</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<!-- container -->
<div class="container">

    <H1>@ViewBag.Message</H1>

    <div class="bg-faded p-4 my-4">
        <hr class="divider">
        <h2 class="text-center text-lg text-uppercase my-0">
            @Model.Nome
            <strong>Descrição</strong>
        </h2>
        <hr class="divider">
        <div class="row"  style="padding:2em">
            <div class="col-lg-6" align="center">
               @if (Model.Foto != null)
                {
                    var base64 = Convert.ToBase64String(Model.Foto);
                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                    <img class="card-img img-fluid w-100" src="@imgSrc" style="width:25em; height:17em;" alt="">
                }
                else
                {
                    <img class="card-img img-fluid w-100" src="~/images/imageNA.png" style="width:25em; height:17em;" alt="">
                }
            </div>
            <div class="col-lg-6">
               @Model.Detalhes
            </div>
        </div>
    </div>
</div>
