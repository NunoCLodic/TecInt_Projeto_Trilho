@model Trails4Health.Models.Questao

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutBackoffice";
}

@*<h2>Create</h2>

    <h4>Questao</h4>*@

<div class="panel panel-primary" style="margin-top:2ex;">
    <div class="panel-heading">
        <h3 class="panel-title">Inserir Questão</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NomeQuestao" class="control-label">Questão</label>
                        <input asp-for="NomeQuestao" class="form-control" />
                        <span asp-validation-for="NomeQuestao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <label>
                                <input asp-for="Desactivada" /> @Html.DisplayNameFor(model => model.Desactivada)
                            </label>
                        </div>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label">Descrição</label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Inserir" class="btn btn-default" />
                    </div>
                    <div>
                        <a asp-action="Index" class="btn btn-warning">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
