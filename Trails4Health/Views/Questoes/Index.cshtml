@model IEnumerable<Trails4Health.Models.Questao>

@{
    ViewData["Title"] = "Questões";
    Layout = "_LayoutBackoffice";
}

@*<h2>Index</h2>*@

<form>
    <div class="panel panel-primary" style="margin-top:2ex;">
        <div class="panel-heading">
            <h3 class="panel-title">Lista de Questões para Avaliação de Guias</h3>
        </div>
        <div class="panel-body">

            <div class="bs-docs-section">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="thead-dark">

                                    <tr>
                                        <th>
                                            Questão
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Desactivada)
                                        </th>
                                        <th>
                                            Descrição
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.NomeQuestao)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Desactivada)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Descricao)
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.QuestaoID">Actualizar</a> | 
                                                    @*<a asp-action="Details" asp-route-id="@item.QuestaoID">Details</a>*@
                                                    <a asp-action="Delete" asp-route-id="@item.QuestaoID">Apagar</a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <p>
                                <a asp-action="Create" class="btn btn-default">Inserir Questão</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

