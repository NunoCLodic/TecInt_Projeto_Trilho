@model Trails4Health.Models.ViewModels.ViewModelQuestionario

@{
    ViewData["Title"] = "Avaliar Guia";
    Layout = "_LayoutEstatisticas";
}


<div class="panel panel-primary" style="margin-top:2ex;">
    <div class="panel-heading">
        <h3 class="panel-title">Avaliar Guia</h3>
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    @*<div class="form-group">
                            <label asp-for="Data" class="control-label"></label>
                            <input asp-for="Data" class="form-control" />
                            <span asp-validation-for="Data" class="text-danger"></span>
                        </div>*@
                    <div class="form-group">
                        <label asp-for="@Model.QuestaoID" class="control-label">Questão</label>
                        <select asp-for="@Model.QuestaoID" class="form-control" asp-items="ViewBag.QuestaoID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.Descricao" class="control-label">Descrição</label>
                        <select asp-for="@Model.Descricao" class="form-control" asp-items="ViewBag.Descricao"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.TuristaID" class="control-label">Turista</label>
                        <select asp-for="@Model.TuristaID" class="form-control" asp-items="ViewBag.TuristaID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.GuiaID" class="control-label">Nome do Guia</label>
                        <select asp-for="@Model.GuiaID" class="form-control" asp-items="ViewBag.GuiaID"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="@Model.OpcaoID" class="control-label">Nota avaliação</label>
                        <select asp-for="@Model.OpcaoID" class="form-control" asp-items="ViewBag.OpcaoID"></select>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Inserir Resposta" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index" class="btn btn-warning">Cancelar</a>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
