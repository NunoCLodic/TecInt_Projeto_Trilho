@model IEnumerable<Trails4Health.Models.ViewModels.ViewModelAgruparPorGuia>

@{
    ViewData["Title"] = "Estatísticas";
    Layout = "_LayoutEstatisticas";
}


<form>
    <div class="panel panel-primary" style="margin-top:2ex;">
        <div class="panel-heading">
            <h3 class="panel-title">Estatísticas de Guias</h3>
        </div>
        <div class="panel-body">

            <div class="bs-docs-section">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="thead-dark">
                                    <tr>
                                        <th>
                                            Nome do Guia
                                        </th>
                                        <th>
                                            Número de respostas de avaliação
                                        </th>
                                        <th>
                                            Soma da avaliação
                                        </th>
                                        <th>
                                            Nota de avaliação
                                        </th>
                                    </tr>

                                    @foreach (var item in Model)
                                    {
                                        <tr>

                                            <td>
                                                @if (item.GuiaID == 1)
                                                {
                                                    @:José Esteves
                                                }
                                                else if (item.GuiaID == 2)
                                                {
                                                    @:Túlio Gonzaga
                                                }
                                                else
                                                {
                                                    @:António Malaquias
                                                }
                                            </td>
                                            <td>
                                                @item.ContarRespostas
                                            </td>
                                            <td>
                                                @item.SomaAvaliacao
                                            </td>
                                            <td>
                                                @item.Avaliacao
                                            </td>
                                        </tr>
                                    }
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
