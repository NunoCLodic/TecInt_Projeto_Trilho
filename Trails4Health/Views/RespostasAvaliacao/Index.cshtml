@model IEnumerable<Trails4Health.Models.RespostaAvaliacao>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutEstatisticas";
}

<form>
    <div class="panel panel-primary" style="margin-top:2ex;">
        <div class="panel-heading">
            <h3 class="panel-title">Respostas de Avaliação de Guias</h3>
        </div>
        <div class="panel-body">

            <p>
                <a asp-action="Create" class="btn btn-default">Avaliar Guia</a>
            </p>

            <div class="bs-docs-section">

                <div class="row">
                    <div class="col-lg-12">
                        <div class="bs-component">
                            <table class="table table-striped table-hover table-bordered">
                                <thead class="thead-dark">
                                <thead>
                                    <tr>
                                        <th>
                                            Data da Resposta
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Guia)
                                        </th>
                                        <th>
                                            Avaliação
                                        </th>
                                        <th>
                                            Questão
                                        </th>
                                        <th>
                                            Turista
                                        </th>
                                        <th></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Data)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Guia.Nome)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Opcao.OpcaoID)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Questao.NomeQuestao)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Turista.Nome)
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.RespostaID">Actualizar</a> @*|
                                    <a asp-action="Details" asp-route-id="@item.RespostaID">Details</a> |
                                    <a asp-action="Delete" asp-route-id="@item.RespostaID">Delete</a>*@
                                    </td>
                                </tr>
                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>